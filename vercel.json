{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "installCommand": "pnpm install",
  "buildCommand": "pnpm --filter @opsuna/shared build && pnpm --filter @opsuna/web build",
  "outputDirectory": "apps/web/.next",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://opsunaserver-production.up.railway.app/api/:path*"
    }
  ]
}
